{
  "name": "@syntrojs/logger",
  "version": "0.1.0-alpha",
  "description": "ðŸ”¥ Fast, simple, and developer-friendly logger for Node.js and Bun (ALPHA - Proof of Concept)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "assets"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "benchmark": "node benchmark.js",
    "benchmark:bun": "bun benchmark.js",
    "benchmark:compare": "node compare-benchmarks.js",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "format": "biome format --write ."
  },
  "keywords": [
    "logger",
    "logging",
    "structured-logging",
    "typescript",
    "fast",
    "lightweight",
    "console",
    "nodejs",
    "bun",
    "alpha",
    "proof-of-concept"
  ],
  "author": "SyntropySoft",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Syntropysoft/sintrojs-logger.git"
  },
  "dependencies": {
    "chalk": "^5.3.0"
  },
  "optionalDependencies": {
    "pino": "^10.1.0",
    "safe-regex": "^2.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@stryker-mutator/core": "8.7.1",
    "@stryker-mutator/typescript-checker": "8.7.1",
    "@stryker-mutator/vitest-runner": "8.7.1",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.2.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
